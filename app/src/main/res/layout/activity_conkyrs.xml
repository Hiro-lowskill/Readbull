<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conkyrs"
    android:background="@drawable/backconkurs">

    <HorizontalScrollView
        android:layout_width="405dp"
        android:layout_height="400dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="350dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/conkursynax"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="350dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/zimayakitai"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/healing"
                tools:ignore="ContentDescription,InefficientWeight" />

        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/imageButton32"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:onClick="btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/angleleft"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>